{% extends "core.twig" %}
{% block title %}{{ _('DBP repository') }}{% endblock %}
{% block contentHeader %}
        {{ _('App') }}
        <small>{{ a.name }}</small>
{% if menu.isMaintainer %}
<a class="btn btn-outline-success" href="{{ path_for('apps.edit', {'id': a.id}) }}" role="button">Edit</a>
{% endif %}
{% endblock %}
{% block scripts %}
<script>
console.log({{ json(a) }})
d3.select('section.content').call(bs.union()
	.item(bs.row()
		.cell('col-lg-3', repo.widgets.items.appFull().data({{ json(a) }}))
		.cell('col-lg-9', bs.tabs()
			.tab('Officials screenshots', bs.carousel()
			).tab('Community screenshots', bs.carousel()
{% if menu.isAuth %}
			).tab('Upload', bs.union()
				.item(bs.mdViewer().src("#### Upload an image"))
				.item(bs.mdViewer().src("tab3 content"))
{% endif %}
	))).item(bs.p()
	).item(bs.tabs()
			.tab('Description', bs.mdViewer().src({{ json(a.infos) }})
			).tab('Comments', bs.mdViewer().src('Comments come here')
			).tab('Version history', bs.mdViewer().src('Version list come here')
			).tab('Issues', bs.mdViewer().src('Issues come here')
	)));
</script>
{% endblock %}
